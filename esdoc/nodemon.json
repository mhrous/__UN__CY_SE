{
  "restartable": "rs",
  "ignore": [".git", "node_modules/**/node_modules", "dist", "doc"],
  "verbose": true,
  "execMap": {
    "js": "node"
  },

  "runOnChangeOnly": false,
  "watch": ["src/**/*.js", "src/**/*.graphql", "src/**/*.gql"],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json,graphql"
}
